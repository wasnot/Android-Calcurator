<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/cyan_dark</item>
        <item name="colorPrimaryDark">@color/cyan_night</item>
        <item name="colorButtonNormal">@color/cyan_white</item>
        <item name="colorControlHighlight">@color/cyan_light</item>
    </style>

    <style name="AppTheme.Yellow">
        <!-- Customize your theme here. -->
        <item name="colorButtonNormal">@color/yellow_white</item>
        <item name="colorControlHighlight">@color/yellow_light</item>
    </style>

    <style name="AppTheme.Red">
        <!-- Customize your theme here. -->
        <item name="colorButtonNormal">@color/red_light</item>
        <item name="colorControlHighlight">@color/red_white</item>
    </style>

    <style name="AppThemeActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/cyan_dark</item>
        <item name="colorPrimaryDark">@color/cyan_night</item>
        <item name="colorButtonNormal">@color/yellow_white</item>
        <item name="colorControlHighlight">@color/yellow_light</item>
    </style>

</resources>
